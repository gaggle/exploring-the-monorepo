{
  "name": "@mono/api",
  "version": "0.0.0",
  "license": "MIT",
  "scripts": {
    "api:start": "prisma generate && nodemon -w src/* -x 'ts-node src/api.ts'",
    "build": "tsc -b",
    "build:start": "node dist/api.js",
    "db:generate": "prisma generate",
    "db:migrate": "prisma migrate dev",
    "db:seed": "prisma db seed --preview-feature",
    "db:start": "docker run --rm -i --name=mono-api-db -p 5432:5432 -v api_data:/var/lib/postgresql/data -e POSTGRES_USER='test' -e POSTGRES_PASSWORD='test' -e POSTGRES_DB='api' postgres",
    "docker:build": "pnpm --silent --workspace-root pnpm-context -- -p 'tsconfig.json' -p 'bin/' -p '!**/*.iml' apps/api/Dockerfile | docker build --progress=plain --build-arg PACKAGE_PATH=apps/api - -t mono-api",
    "docker:start": "docker run --rm -it --name=mono-api -p 3002:3002 -e DATABASE_URL=postgresql://test:test@mono-api-db:5432/api --link=mono-api-db mono-api",
    "start": "concurrently -kn=api,db 'pnpm:api:start' 'pnpm:db:start'"
  },
  "dependencies": {
    "@mono/analytics": "workspace:*",
    "@mono/types": "workspace:*",
    "@prisma/client": "2.27.0-integration-fix-sdk-pnpm.2",
    "cors": "^2.8.5",
    "execa": "^5.0.0",
    "express": "^4.17.1",
    "prisma": "2.27.0-integration-fix-sdk-pnpm.2",
    "ts-node": "^9.1.1"
  },
  "devDependencies": {
    "@types/cors": "^2.8.10",
    "@types/express": "^4.17.11",
    "@types/node": "^14.14.37",
    "concurrently": "^6.0.2",
    "nodemon": "^2.0.7",
    "typescript": "^4.2.4"
  },
  "private": true
}
