{
  "name": "@mono/web",
  "version": "0.0.0",
  "license": "MIT",
  "scripts": {
    "build:start": "NODE_ENV=production node build/server.js",
    "build": "tsc -b && razzle build --noninteractive",
    "docker:build":"tar --exclude='node_modules' --exclude='dist' --exclude='.git' -cf - ../.. | docker build -f apps/web/Dockerfile - -t web",
    "docker:start":"docker run --rm -it -p3000:3000 web",
    "start:tsc": "tsc -b -w --preserveWatchOutput",
    "start": "concurrently -n=tsc,razzle 'pnpm:start:tsc' 'razzle start'",
    "test": "razzle test --env=jsdom"
  },
  "dependencies": {
    "@mono/types": "workspace:*",
    "express": "^4.17.1",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-router-dom": "^5.1.2"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^5.12.0",
    "@testing-library/react": "^11.2.6",
    "@types/express": "^4.17.11",
    "@types/jest": "^26.0.23",
    "@types/node": "^14.14.41",
    "@types/react": "^17.0.0",
    "@types/react-dom": "^17.0.3",
    "@types/react-router-dom": "^5.1.7",
    "@types/webpack-env": "^1.14.0",
    "babel-preset-razzle": "4.0.4",
    "concurrently": "^6.0.2",
    "html-webpack-plugin": "^4.5.2",
    "jest-fetch-mock": "^3.0.3",
    "mini-css-extract-plugin": "^0.9.0",
    "razzle": "4.0.4",
    "razzle-dev-utils": "^4.0.4",
    "typescript": "^4.2.4",
    "webpack": "^4.44.1",
    "webpack-dev-server": "^3.11.2"
  },
  "private": true
}
